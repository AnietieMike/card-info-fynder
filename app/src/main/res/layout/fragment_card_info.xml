<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sailor_blue"
    android:paddingVertical="24dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_error_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:tint="@color/design_default_color_error" />

    <TextView
        android:id="@+id/error_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fira_sans_semibold"
        android:padding="16dp"
        android:text="An error occurred"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0" />

        <TextView
        android:id="@+id/card_brand_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="Card Brand"
        android:textSize="18sp"
        android:textColor="@color/island_green"
            android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/card_brand_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/card_brand_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:fontFamily="@font/fira_sans_semibold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/card_type_title_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_brand_title_text_view" />

    <TextView
        android:id="@+id/card_type_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Card Type"
        android:textSize="18sp"
        android:textColor="@color/island_green"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/card_type_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_brand_text_view" />

    <TextView
        android:id="@+id/card_type_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans_semibold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bank_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/card_type_title_text_view" />

    <TextView
        android:id="@+id/bank_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Bank"
        android:textSize="18sp"
        android:textColor="@color/island_green"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/bank_text_view"
        app:layout_constraintTop_toBottomOf="@+id/card_type_text_view" />

    <TextView
        android:id="@+id/bank_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans_semibold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/card_number_text_view"
        app:layout_constraintTop_toBottomOf="@+id/bank_title_text_view" />

    <TextView
        android:id="@+id/card_number_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Card Number"
        android:textSize="18sp"
        android:textColor="@color/island_green"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/card_no_text_view"
        app:layout_constraintTop_toBottomOf="@+id/bank_text_view" />

    <TextView
        android:id="@+id/card_no_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans_semibold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/expiry_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/card_number_text_view" />

    <TextView
        android:id="@+id/expiry_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="Expiry Date"
        android:textSize="18sp"
        android:textColor="@color/island_green"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/expiry_date_text_view"
        app:layout_constraintTop_toBottomOf="@+id/card_no_text_view" />

    <TextView
        android:id="@+id/expiry_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans_semibold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/cvv_title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/expiry_title_text_view" />

    <TextView
        android:id="@+id/cvv_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="CVV"
        android:textSize="18sp"
        android:textColor="@color/island_green"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cvv_text_view"
        app:layout_constraintTop_toBottomOf="@+id/expiry_date_text_view" />

    <TextView
        android:id="@+id/cvv_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/fira_sans_semibold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvv_title_text_view" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

</androidx.constraintlayout.widget.ConstraintLayout>